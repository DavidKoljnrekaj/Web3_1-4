{
    "compilerOptions": {
      "target": "ES6",                   
      "module": "CommonJS",    
      "strict": true,                     
      "esModuleInterop": true,       
      "skipLibCheck": true,             
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",                
      "rootDir": "./",              
      "types": ["node", "express"],         
      "resolveJsonModule": true           
    },
    "include": [
      "server/**/*.ts"
    ],
    "exclude": [
      "node_modules",                 
      "dist"                              
    ],
  }
  